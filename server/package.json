{
  "name": "server",
  "version": "0.0.1",
  "packageManager": "bun@1.3.6",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "concurrently \"bun --watch run src/index.ts\" \"tsc --watch\"",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:init": "prisma migrate dev && prisma db seed",
    "initiate": "bun run db:init"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@auth/prisma-adapter": "^2.11.1",
    "@hono/auth-js": "^1.1.1",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/client": "5",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "hono": "^4.12.0",
    "hono-pino": "^0.10.3",
    "pino": "^10.3.1",
    "shared": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.10",
    "@types/pino": "^7.0.5",
    "concurrently": "^9.2.1",
    "nodemailer": "^8.0.1",
    "pino-pretty": "^13.1.3",
    "prisma": "5"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  }
}