generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum PromoKeyType {
  FREE_15_DAYS
  DISCOUNT_20
  DISCOUNT_50
  FREE_MONTH
}

enum AppointmentType {
  VIRTUAL
  FACE_TO_FACE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?
  address       String?
  specialty     String?
  onboardingStep Int      @default(0)
  isProfessionalActive Boolean @default(false)
  workingHours  Json?
  role          String    @default("patient")

  // Public profile fields
  licenseNumber    String?
  bio              String?
  languages        String[]  @default([])
  sessionPrice     Float?
  isProfilePublic  Boolean   @default(true)
  isProfileEnabled Boolean   @default(false)
  minAnticipationHours Int    @default(1)

  accounts      Account[]
  sessions      Session[]
  promoRedemptions PromoKeyRedemption[]
  transactions  Transaction[]
  patientRelations       PatientProfessionalRelation[] @relation("PatientRelations")
  professionalRelations  PatientProfessionalRelation[] @relation("ProfessionalRelations")
  patientAppointments       Appointment[] @relation("PatientAppointments")
  professionalAppointments  Appointment[] @relation("ProfessionalAppointments")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model PatientProfessionalRelation {
  id               String   @id @default(cuid())
  patientId        String
  professionalId   String
  status           String   @default("pending") // pending | approved | rejected
  patient          User     @relation("PatientRelations", fields: [patientId], references: [id], onDelete: Cascade)
  professional     User     @relation("ProfessionalRelations", fields: [professionalId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())

  @@unique([patientId, professionalId])
}

model Appointment {
  id               String   @id @default(cuid())
  patientId        String
  professionalId   String
  dateTime         DateTime
  status           String   @default("pending") // pending | confirmed | cancelled
  type             AppointmentType @default(VIRTUAL)
  notes            String?
  patient          User     @relation("PatientAppointments", fields: [patientId], references: [id], onDelete: Cascade)
  professional     User     @relation("ProfessionalAppointments", fields: [professionalId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([professionalId, dateTime])
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  currency  String   @default("USD")
  status    String   @default("COMPLETED")
  concept   String?  // e.g., "Plan Premium Anual"
  plan      String?  // e.g., "professional_monthly"
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PromoKey {
  id        String       @id @default(cuid())
  key       String       @unique
  type      PromoKeyType
  startDate DateTime
  endDate   DateTime
  uses      Int
  used      Int          @default(0)
  redemptions PromoKeyRedemption[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model PromoKeyRedemption {
  id         String   @id @default(cuid())
  userId     String
  promoKeyId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  promoKey   PromoKey @relation(fields: [promoKeyId], references: [id], onDelete: Cascade)
  redeemedAt DateTime @default(now())

  @@unique([userId, promoKeyId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}
